[core]
  excludesfile = ~/.gitignore_global
  editor = vim
[user]
  name = Robin Clowers
  email = robin.clowers@gmail.com
[merge]
  tool = p4merge
[diff]
  tool = p4merge
  compactionHeuristic = true
[color]
  ui = auto
[format]
  pretty=format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset
[push]
  default = upstream
[rerere]
  enabled = true
[url "ssh://git@git.sourceai.io/source/"]
  insteadOf = https://git.sourceai.io/source/
[alias]
  ci = commit
  co = checkout
  pre = pull --rebase
  st = status
  m = merge --no-ff
  di = diff
  dc = diff --cached
  amend = commit --amend
  aa = add --all .
  head = !git l -1
  h = !git head
  r = !git l -20
  ff = merge --ff-only
  pullff = pull --ff-only
  noff = merge --no-ff
  l = log --graph --abbrev-commit --date=relative
  la = !git l --all
  div = divergence
  fa = fetch --all
  pom = push origin master
  b = branch
  ds = diff --stat=160,120
  dh1 = diff HEAD~1
  sh = !git log --format=%B -n 1
  ra = rebase --autosquash -i
  fix = commit --fixup
  noskip = "!git skips | xargs git update-index --no-skip-worktree"
  skip = update-index --skip-worktree
  skips = "!git ls-files -v | awk '/^S/{ print $2 }'"
  sl = show --name-status
